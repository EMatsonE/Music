@model IEnumerable<Music.Models.Data>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Music</h1>
<div>
    <form method="post">
        <div>
            <label for="movieTitle">Enter A Genre</label>
            <input type="text" name="musicTitle" value="" />
        </div>
        <div>
            <input type="submit" value="Submit" class="index" />
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Artist Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.album)
            </th>
            <th>
                Album Cover
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img height="100" width="100" src="@item.artist.picture_medium" alt="artist picture" />
            </td>
            <td>
                @item.album.title
            </td>
            <td>
                <img width="100" height="100" src="@item.album.cover_medium" alt="cover picture" />
            </td>
        </tr>
        }
    </tbody>
</table>
